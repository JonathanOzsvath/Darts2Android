<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D17D5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Adja meg az első játékos nevét"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:textSize="22dp"
            android:gravity="center"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etScore"
            android:layout_centerHorizontal="true">

            <TableRow android:layout_width="fill_parent">
                <TextView
                    android:id="@+id/playerOneName"
                    android:text="Player1"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"/>

                <TextView
                    android:id="@+id/playerTwoName"
                    android:text="Player2"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/playerOneScore"
                    android:text="501"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/playerTwoScore"
                    android:text="501"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/playerOneOut"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/playerTwoOut"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnFive"
            android:text="5"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnTwo"
            android:text="2"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnFive"
            android:layout_alignLeft="@id/btnFive"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnEight"
            android:text="8"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnFive"
            android:layout_alignLeft="@id/btnFive"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnFour"
            android:text="4"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnFive"
            android:layout_alignTop="@id/btnFive"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnSix"
            android:text="6"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnFive"
            android:layout_alignTop="@id/btnFive"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnOne"
            android:text="1"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnTwo"
            android:layout_alignTop="@id/btnTwo"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnThree"
            android:text="3"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnTwo"
            android:layout_alignTop="@id/btnTwo"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnSeven"
            android:text="7"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnEight"
            android:layout_alignTop="@id/btnEight"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnNine"
            android:text="9"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnEight"
            android:layout_alignTop="@id/btnEight"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnNull"
            android:text="0"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnEight"
            android:layout_alignLeft="@id/btnFive"
            android:onClick="onClickNumber"
            android:background="@drawable/number_selector"
            android:shadowColor="#FFFF00"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnClear"
            android:text="Clear"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnNull"
            android:layout_alignTop="@id/btnNull"
            android:onClick="onClickClear"
            android:background="@drawable/cancel_selector"
            android:shadowColor="#22ff0a"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnOk"
            android:text="Ok"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnNull"
            android:layout_alignTop="@id/btnNull"
            android:onClick="onClickOk"
            android:background="@drawable/ok_selector"
            android:shadowColor="#ff0013"
            android:shadowRadius="10"
            android:layout_margin="1dp"/>

    </RelativeLayout>

</LinearLayout>
